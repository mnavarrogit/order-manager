{
  "name": "OrderManager",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/cds-common-content": "^2.1.0",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "rimraf": "^5.0.5",
    "@sap/ux-specification": "UI5-1.128"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy OrderManager --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "name@dns.com": {
              "password": "initial",
              "roles": [
                "Manager"
              ]
            },
            "test@test.com": {
              "password": "initial",
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "destinations": true,
        "html5-repo": true,
        "db": {
          "kind": "hana"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/orders"
  ]
}
